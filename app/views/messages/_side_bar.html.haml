.side-bar
 .side-bar__user-name
  .top-items
   .top-items__name 
   .top-items__icons
    =link_to new_group_path do
     =icon('far','edit', class: "top-items__icons--memo")
    = link_to edit_user_path(current_user) do
     = icon('fas', 'cog', class: "top-items__icons--hag") 
 .side-bar__group-list
  - current_user.groups.each do |group|
   .box
    = link_to group_messages_path(group) do
     .box__item
      = group.name
     .box__user
      = group.show_last_message